{
  "name": "nextarter-tailwind",
  "version": "0.1.0",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": ">=22.11.x"
  },
  "packageManager": "pnpm@10.7.1",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "turbo": "pnpm dlx turbo@2.5.0",
    "build:turbo": "pnpm turbo build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type:check": "tsc --noEmit",
    "check:turbo": "pnpm turbo lint type:check",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky",
    "knip": "knip"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.510.0",
    "next": "^15.3.2",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.15.17",
    "@types/react": "19.1.4",
    "commit-and-tag-version": "^12.5.1",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.2",
    "husky": "^9.1.7",
    "knip": "^5.55.1",
    "lint-staged": "^16.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.6",
    "typescript": "5.8.3"
  }
}